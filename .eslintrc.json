{
  "env": {
    "commonjs": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "prettier",
    "airbnb-base"
  ],
  "plugins": [
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "max-len": [
      "error",
      {
        "ignoreComments": true
      }
    ]
  }
}
